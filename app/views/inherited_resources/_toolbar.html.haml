%ul.exo-horizontal-nav
  %li
    - if respond_to? :parent and parent
      %a.exo-button.exo-dark{href: parent_url } Back to #{parent.class.try(:name).try(:humanize)}
    - else
      %a.exo-button.exo-dark{href: collection_path}
        All
        .exo-tiny-icon-search
  - if if_path(/#{collection_path.tr('/','\/')}\/\w+/) and (! if_path(/\/new\/?$/)) and resource
    %li
      %a.exo-button.exo-dark{href: edit_resource_path(resource)} 
        Edit
    %li
      %a.exo-button.exo-dark{href: resource_path, 'data-confirm' => 'Are you sure?', 'data-method' => 'delete'}
        Destroy
  %li
    %a.exo-button.exo-dark{href: new_resource_path}
      Add
      .exo-tiny-icon-plus
